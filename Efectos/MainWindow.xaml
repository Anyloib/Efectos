<Window x:Class="Efectos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Efectos"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="txtRuta" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="412"/>
        <Button x:Name="btnReproducir" Content="Reproducir" HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top" Width="75" Click="btnReproducir_Click"/>
        <Button x:Name="btnEfecto" Content="Efecto" HorizontalAlignment="Left" Margin="105,28,0,0" VerticalAlignment="Top" Width="75" Click="btnEfecto_Click"/>
        <Button x:Name="btnExaminar" Content="Examinar" HorizontalAlignment="Left" Margin="432,3,0,0" VerticalAlignment="Top" Width="75" Click="btnExaminar_Click"/>
        <Slider x:Name="sldFactor" HorizontalAlignment="Left" Margin="10,53,0,0" VerticalAlignment="Top" Height="66" Width="497" Maximum="1" Value="0.5" ValueChanged="sldFactor_ValueChanged"/>
        <Button x:Name="btnDelay" Content="Delay" HorizontalAlignment="Left" Margin="200,28,0,0" VerticalAlignment="Top" Width="75" Click="btnDelay_Click"/>

    </Grid>
</Window>
